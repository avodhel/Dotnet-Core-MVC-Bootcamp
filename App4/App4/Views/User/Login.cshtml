@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@using (Html.BeginForm(FormMethod.Post))
{
    <div class="container">
        <div class="row form-group">
            @Html.Label(null, "Kullanıcı Adı", new { @class = "col-md-3 form-label" })
            @Html.TextBoxFor(x => x.UserName, null, new { @class = "col-md-3 form-control" })
        </div>
        <div class="row form-group">
            @Html.Label(null, "Şifre", new { @class = "col-md-3 form-label" })
            @Html.TextBoxFor(x => x.Password, null, new { @class = "col-md-3 form-control", type = "password" })
        </div>
        <div class="row form-group">
            <input type="submit" value="Giriş" class="btn btn-light" />
        </div>


        <div class="row form-group">
            @*@Html.ActionLink("Google ile giriş yap", "GoogleLogin", "User", new { Context.Request.QueryString }, new { @class = "btn btn-danger" })*@
            <a href="~/User/GoogleLogin\@Context.Request.QueryString" class="btn btn-danger">Google ile giriş yap</a>
        </div>
    </div>
}