@model BookUpdateViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

@using (Html.BeginForm(FormMethod.Post))
{

    <div class="container">
        <div class="row form-group">
            @Html.LabelFor(x => x.BookId, null, new { @class = "col-md-3" })
            @Html.HiddenFor(x => x.BookId)
            @Html.DisplayFor(x => x.BookId)
        </div>

        <div class="row form-group">
            @Html.LabelFor(x => x.Name, null, new { @class = "col-md-3" })
            @Html.TextBoxFor(x => x.Name, null, new { @class = "col-md-5 form-control" })
        </div>
        <div class="row form-group">
            @Html.LabelFor(x => x.AuthorIds, null, new { @class = "col-md-3" })
            @Html.ListBoxFor(x => x.AuthorIds, Model.Authors, new { @class = "col-md-5 form-control" })
        </div>
        <div class="row form-group">
            @Html.LabelFor(x => x.PublisherId, null, new { @class = "col-md-3" })
            @Html.DropDownListFor(x => x.PublisherId, Model.Publishers, new { @class = "col-md-5 form-control" })
        </div>
        <div class="row form-group">
            <input type="submit" value="Güncelle" class="btn-primary" />
        </div>
    </div>
}
