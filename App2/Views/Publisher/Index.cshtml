@model IEnumerable<App2.Models.PublisherIndexViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Yayınevleri</h1>

<p>
    <a asp-action="Insert">Yeni Yayınevi Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PublisherId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Update", new { id = item.PublisherId }) |
                @Html.ActionLink("Detay", "Detail", new { id = item.PublisherId }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.PublisherId })
            </td>
        </tr>
}
    </tbody>
</table>
