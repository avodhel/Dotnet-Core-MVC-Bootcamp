@model AuthorViewModel
@{
    ViewData["Title"] = "Detail";
}

<h1>Yazar Detayları</h1>

<div class="container">
    <div class="row form-group">
        <div class="col-md-3"><strong>Yazar No</strong></div>
        <div class="col-md-9"><p>@Model.Id</p></div>
    </div>
    <div class="row form-group">
        <div class="col-md-3"><strong>Yazar Adı</strong></div>
        <div class="col-md-9"><p>@Model.Name</p></div>
    </div>
    <div class="row form-group">
        <div class="col-md-3"><strong>Yazar Soyadı</strong></div>
        <div class="col-md-9"><p>@Model.Surname</p></div>
    </div>
    <div class="row form-group">
        <div class="col-md-3"><strong>Kısa Özgeçmiş</strong></div>
        <div class="col-md-9"><p>@Model.ShortBio</p></div>
    </div>
</div>